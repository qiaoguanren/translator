<Synthesis>
  <Hardware>
    <Component
      id="rotavap"
      type="rotavap"
    />
    <Component
      id="reactor"
      type="reactor"
    />
  </Hardware>

  <Reagents>
    <Reagent
      name="ether"
      density="2.6 g/mL"
      molecular_weight="46.07 g/mol"/>
    <Reagent
      name="NaCl"
      solid="true"
      molecular_weight="58.443 g/mol"/>
    <Reagent
      name="chloroacetyl chloride"
      concentration="100 mol/L"
      density="17.8 g/mL"/>
  </Reagents>

  <Procedure>
    <Add
      vessel="rotavap"
      reagent="chloroacetyl chloride"
      amount="2 equivalents"/>
     <Add
      vessel="rotavap"
      reagent="ether"
      amount="2.9 equiv"/>
      <Add
      vessel="rotavap"
      reagent="ether"
      amount="1 eq"/>
      <Add
      vessel="rotavap"
      reagent="NaCl"
      amount="6 equivs"/>
  </Procedure>

</Synthesis>
