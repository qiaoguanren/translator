<Synthesis>

  <Hardware>
    <Component
      id="cartridge_MgSO4"
      type="cartridge"
      chemical="MgSO4"
    />
    <Component
      id="cartridge_silica-gel"
      type="cartridge"
      chemical="silica-gel"
    />
    <Component
      id="reactor"
      type="reactor"
    />
    <Component
      id="rotavap"
      type="rotavap"
    />
    <Component
      id="separator"
      type="separator"
    />
    <Component
      id="product"
      type="flask"
    />
  </Hardware>

  <Reagents>
    <Reagent
      name="2 methylcyclohexanone"
    />
    <Reagent
      name="brine"
    />
    <Reagent
      name="hexane"
    />
    <Reagent
      name="saturated sodium bicarbonate solution"
    />
    <Reagent
      name="sodium iodide acetonitrile solution"
    />
    <Reagent
      name="t-butyldimethylsilyl chloride(TBDMSCl)"
      solid="true"
    />
    <Reagent
      name="triethylamine"
    />
  </Reagents>

  <Procedure>
    <EvacuateAndRefill
      vessel="reactor"
    />
    <Add
      vessel="reactor"
      reagent="2 methylcyclohexanone"
      volume="10 mL"
    />
    <Add
      vessel="reactor"
      reagent="triethylamine"
      volume="13.9 mL"
      stir="True"
    />
    <AddSolid
      vessel="reactor"
      reagent="t-butyldimethylsilyl chloride(TBDMSCl)"
      mass="15.1 g"
      stir="True"
    />
    <Add
      vessel="reactor"
      reagent="sodium iodide acetonitrile solution"
      volume="100 mL"
      time="30 mins"
      stir="True"
    />
    <Stir
      vessel="reactor"
      time="18 hrs"
    />
    <Add
      vessel="reactor"
      reagent="saturated sodium bicarbonate solution"
      volume="100 mL"
      stir="True"
    />
    <Separate
      purpose="extract"
      from_vessel="reactor"
      separation_vessel="separator"
      to_vessel="separator"
      product_phase="top"
      solvent="hexane"
      to_port="bottom"
      solvent_volume="200 mL"
      repeats="2"
    />
    <Separate
      purpose="wash"
      from_vessel="separator"
      separation_vessel="separator"
      to_vessel="rotavap"
      product_phase="top"
      solvent="brine"
      through="MgSO4"
      to_port="evaporate"
      solvent_volume="40 mL"
    />
    <Evaporate
      vessel="rotavap"
      temp="30Â°C"
      pressure="26.66 mbar"
      time="30 mins"
      mode="auto"
    />
    <FilterThrough
      from_vessel="rotavap"
      to_vessel="product"
      through="silica-gel"
      eluting_solvent="hexane"
      eluting_volume="1000 mL"
    />
  </Procedure>

</Synthesis>
