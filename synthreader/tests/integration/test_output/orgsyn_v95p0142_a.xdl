<?xdl version="0.4.4" ?>

<Synthesis>
  <Hardware>
    <Component
      id="cartridge_MgSO4"
      type="cartridge"
      chemical="MgSO4" />
    <Component
      id="filter"
      type="filter" />
    <Component
      id="reactor"
      type="reactor" />
    <Component
      id="rotavap"
      type="rotavap" />
    <Component
      id="separator"
      type="separator" />
  </Hardware>

  <Reagents>
    <Reagent
      id="CH2Cl2" />
    <Reagent
      id="N-Boc hydroxyl-amine" />
    <Reagent
      id="dichloromethane" />
    <Reagent
      id="saturated aqueous NaCl" />
    <Reagent
      id="tert-Butyldimethylsilylchloride" />
    <Reagent
      id="triethylamine" />
    <Reagent
      id="water" />
  </Reagents>

  <Procedure>
    <Add
      reagent="N-Boc hydroxyl-amine"
      vessel="reactor"
      mass="44 g" />
    <Dissolve
      vessel="reactor"
      solvent="CH2Cl2"
      volume="1.1 l" />
    <HeatChillToTemp
      vessel="reactor"
      temp="4.0"
      stir="True" />
    <Add
      reagent="triethylamine"
      vessel="reactor"
      volume="49 mL"
      time="15 mins"
      stir="True" />
    <Add
      reagent="dichloromethane"
      vessel="reactor"
      volume="20 mL"
      stir="True" />
    <Confirm
      msg="Is tert-Butyldimethylsilylchloride ( 49.7 g , 330 mmol , 1.0 equiv ) in the correct vessel?" />
    <Dissolve
      vessel="filter"
      solvent="CH2Cl2"
      volume="150 mL" />
    <Transfer
      from_vessel="filter"
      to_vessel="reactor"
      volume="all"
      time="60 mins" />
    <Add
      reagent="dichloromethane"
      vessel="filter"
      volume="50 mL"
      stir="True" />
    <Transfer
      from_vessel="filter"
      to_vessel="reactor"
      volume="all" />
    <HeatChill
      vessel="reactor"
      temp="23.0"
      time="16 hrs"
      stir="True" />
    <Add
      reagent="water"
      vessel="reactor"
      volume="250 mL"
      stir="True" />
    <Transfer
      from_vessel="reactor"
      to_vessel="separator"
      volume="all" />
    <Add
      reagent="CH2Cl2"
      vessel="separator"
      volume="50 mL"
      stir="True" />
    <Separate
      purpose="extract"
      from_vessel="separator"
      separation_vessel="separator"
      to_vessel="separator"
      product_bottom="True"
      solvent="" />
    <Separate
      purpose="wash"
      from_vessel="separator"
      separation_vessel="separator"
      to_vessel="rotavap"
      product_bottom="True"
      solvent="saturated aqueous NaCl"
      through="MgSO4"
      solvent_volume="250 mL" />
    <Add
      reagent="dichloromethane"
      vessel="rotavap"
      volume="50 mL"
      through="MgSO4" />
    <Evaporate
      rotavap_name="rotavap"
      temp="40.0"
      pressure="303.30755"
      time="30 mins"
      mode="auto" />
    <Add
      reagent="CH2Cl2"
      vessel="rotavap"
      volume="0" />
    <Evaporate
      rotavap_name="rotavap"
      temp="40.0"
      pressure="303.30755"
      time="30 mins"
      mode="auto" />
    <Dry
      vessel="rotavap"
      time="48 hrs"
      vacuum_pressure="0.66661" />
  </Procedure>

</Synthesis>
