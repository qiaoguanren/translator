<?xdl version="0.4.4" ?>

<Synthesis>
  <Hardware>
    <Component
      id="filter"
      type="filter" />
    <Component
      id="rotavap"
      type="rotavap" />
  </Hardware>

  <Reagents>
    <Reagent
      id="C6H5CH2MgCl (1M in diethyl ether)" />
    <Reagent
      id="ZrCl4 diethyl ether solution" />
    <Reagent
      id="toluene" />
  </Reagents>

  <Procedure>
    <HeatChillToTemp
      vessel="filter"
      temp="-78.0"
      stir="True" />
    <Add
      reagent="ZrCl4 diethyl ether solution"
      vessel="filter"
      volume="50 mL"
      time="60 mins" />
    <Add
      reagent="C6H5CH2MgCl (1M in diethyl ether)"
      vessel="filter"
      volume="100 mL"
      time="60 mins"
      stir="True" />
    <HeatChillToTemp
      vessel="filter"
      temp="18.0"
      active="False"
      continue_heatchill="False"
      stir="True" />
    <HeatChill
      vessel="filter"
      temp="25.0"
      time="16 hrs"
      stir="True" />
    <HeatChillToTemp
      vessel="filter"
      temp="0.0"
      stir="True" />
    <Filter
      filter_vessel="filter" />
    <Transfer
      from_vessel="filter"
      to_vessel="rotavap"
      volume="all" />
    <Evaporate
      rotavap_name="rotavap"
      time="30 mins"
      mode="auto" />
    <Dissolve
      vessel="rotavap"
      solvent="toluene"
      volume="30 mL" />
    <Transfer
      from_vessel="rotavap"
      to_vessel="filter"
      volume="all" />
    <Filter
      filter_vessel="filter" />
    <WashSolid
      vessel="filter"
      solvent="toluene"
      volume="10 mL"
      temp="10.0"
      repeat="2" />
    <Dry
      vessel="filter" />
  </Procedure>

</Synthesis>
