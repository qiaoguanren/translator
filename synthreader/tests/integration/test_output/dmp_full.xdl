<?xdl version="0.4.4" ?>

<Synthesis>
  <Hardware>
    <Component
      id="cartridge_magnesium sulfate"
      type="cartridge"
      chemical="magnesium sulfate" />
    <Component
      id="filter"
      type="filter" />
    <Component
      id="rotavap"
      type="rotavap" />
    <Component
      id="separator"
      type="separator" />
  </Hardware>

  <Reagents>
    <Reagent
      id="2-Iodobenzoic acid" />
    <Reagent
      id="25 % aqueous sodium thiosulfate" />
    <Reagent
      id="DMP" />
    <Reagent
      id="acetic anhydride" />
    <Reagent
      id="acetone" />
    <Reagent
      id="anhydrous ether" />
    <Reagent
      id="glacial acetic acid" />
    <Reagent
      id="menthol (31.25 g in 500 mL DCM) DCM solution" />
    <Reagent
      id="oxone deionized water solution" />
    <Reagent
      id="saturated aqueous sodium bicarbonate solution" />
    <Reagent
      id="the moist solid iodinane oxide" />
    <Reagent
      id="water" />
  </Reagents>

  <Procedure>
    <Add
      reagent="oxone deionized water solution"
      vessel="filter"
      volume="650 mL"
      stir="True"
      stir_speed="600.0" />
    <Add
      reagent="2-Iodobenzoic acid"
      vessel="filter"
      mass="50 g"
      stir="True"
      stir_speed="600.0" />
    <HeatChillToTemp
      vessel="filter"
      temp="71.5"
      stir="True" />
    <Stir
      vessel="filter"
      time="3 hrs" />
    <HeatChillToTemp
      vessel="filter"
      temp="5.0"
      stir="True" />
    <Stir
      vessel="filter"
      time="1.5 hrs"
      stir_speed="50.0" />
    <Filter
      filter_vessel="filter" />
    <WashSolid
      vessel="filter"
      solvent="water"
      volume="100 mL"
      repeat="6" />
    <WashSolid
      vessel="filter"
      solvent="acetone"
      volume="100 mL"
      repeat="2" />
    <Dry
      vessel="filter"
      time="2 hrs"
      temp="25.0" />
    <Add
      reagent="the moist solid iodinane oxide"
      vessel="filter"
      mass="56 g" />
    <Add
      reagent="glacial acetic acid"
      vessel="filter"
      volume="96 mL" />
    <Add
      reagent="acetic anhydride"
      vessel="filter"
      volume="192 mL"
      stir="True" />
    <HeatChillToTemp
      vessel="filter"
      temp="85.0"
      stir="True" />
    <Stir
      vessel="filter"
      time="20 mins" />
    <StopStir
      vessel="filter" />
    <StopHeatChill
      vessel="filter" />
    <Wait
      time="24 hrs" />
    <Filter
      filter_vessel="filter" />
    <WashSolid
      vessel="filter"
      solvent="anhydrous ether"
      volume="80 mL"
      repeat="3" />
    <Dry
      vessel="filter" />
    <Add
      reagent="DMP"
      vessel="filter"
      mass="51 g" />
    <Add
      reagent="menthol (31.25 g in 500 mL DCM) DCM solution"
      vessel="filter"
      volume="500 mL" />
    <Stir
      vessel="filter"
      time="30 mins" />
    <Add
      reagent="25 % aqueous sodium thiosulfate"
      vessel="filter"
      volume="234 mL"
      stir="True" />
    <Add
      reagent="saturated aqueous sodium bicarbonate solution"
      vessel="filter"
      volume="234 mL"
      stir="True" />
    <Stir
      vessel="filter"
      time="30 mins"
      stir_speed="600.0" />
    <Separate
      purpose="extract"
      from_vessel="filter"
      separation_vessel="separator"
      to_vessel="separator"
      product_bottom="False"
      solvent="anhydrous ether"
      solvent_volume="700 mL" />
    <Separate
      purpose="wash"
      from_vessel="separator"
      separation_vessel="separator"
      to_vessel="rotavap"
      product_bottom="False"
      solvent="saturated aqueous sodium bicarbonate solution"
      through="magnesium sulfate"
      solvent_volume="468 mL"
      n_separations="2" />
    <Evaporate
      rotavap_name="rotavap"
      temp="50.0"
      pressure="768.5"
      time="30 mins"
      mode="auto" />
  </Procedure>

</Synthesis>
