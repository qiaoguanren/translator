<?xdl version="0.4.4" ?>

<Synthesis>
  <Hardware>
    <Component
      id="cartridge_anhydrous MgSO4"
      type="cartridge"
      chemical="anhydrous MgSO4" />
    <Component
      id="reactor"
      type="reactor" />
    <Component
      id="rotavap"
      type="rotavap" />
    <Component
      id="separator"
      type="separator" />
  </Hardware>

  <Reagents>
    <Reagent
      id="2-thiophenecarboxaldehyde" />
    <Reagent
      id="K2CO3" />
    <Reagent
      id="MTBE" />
    <Reagent
      id="methanol" />
    <Reagent
      id="saturated NaCl solution" />
    <Reagent
      id="tosylmethylisocyanide" />
    <Reagent
      id="water" />
  </Reagents>

  <Procedure>
    <Add
      reagent="2-thiophenecarboxaldehyde"
      vessel="reactor"
      mass="11.21 g" />
    <Add
      reagent="K2CO3"
      vessel="reactor"
      mass="24.19 g" />
    <Add
      reagent="tosylmethylisocyanide"
      vessel="reactor"
      mass="21.12 g" />
    <Add
      reagent="methanol"
      vessel="reactor"
      volume="448 mL" />
    <HeatChill
      vessel="reactor"
      temp="66.0"
      time="4 hrs"
      stir="True" />
    <HeatChillToTemp
      vessel="reactor"
      temp="25.0"
      stir="True" />
    <Add
      reagent="water"
      vessel="reactor"
      volume="224 mL"
      stir="True" />
    <Stir
      vessel="reactor"
      time="10 mins" />
    <Transfer
      from_vessel="reactor"
      to_vessel="rotavap"
      volume="all" />
    <Evaporate
      rotavap_name="rotavap"
      temp="45.0"
      pressure="99.9915"
      time="30 mins"
      mode="auto" />
    <Transfer
      from_vessel="rotavap"
      to_vessel="separator"
      volume="all" />
    <Separate
      purpose="extract"
      from_vessel="separator"
      separation_vessel="separator"
      to_vessel="separator"
      product_bottom="False"
      solvent="MTBE"
      solvent_volume="120 mL"
      n_separations="3" />
    <Separate
      purpose="wash"
      from_vessel="separator"
      separation_vessel="separator"
      to_vessel="separator"
      product_bottom="False"
      solvent="water"
      solvent_volume="50 mL" />
    <Separate
      purpose="wash"
      from_vessel="separator"
      separation_vessel="separator"
      to_vessel="rotavap"
      product_bottom="False"
      solvent="saturated NaCl solution"
      through="anhydrous MgSO4"
      solvent_volume="50 mL" />
    <Evaporate
      rotavap_name="rotavap"
      temp="35.0"
      pressure="66.661"
      time="30 mins"
      mode="auto" />
    <Distill />
  </Procedure>

</Synthesis>
