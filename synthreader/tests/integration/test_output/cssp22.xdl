<?xdl version="0.4.4" ?>

<Synthesis>
  <Hardware>
    <Component
      id="cartridge_magnesium sulphate"
      type="cartridge"
      chemical="magnesium sulphate" />
    <Component
      id="column"
      type="column" />
    <Component
      id="reactor"
      type="reactor" />
    <Component
      id="rotavap"
      type="rotavap" />
    <Component
      id="separator"
      type="separator" />
  </Hardware>

  <Reagents>
    <Reagent
      id="ammonium chloride solution" />
    <Reagent
      id="brine" />
    <Reagent
      id="cerium trichloride" />
    <Reagent
      id="ethyl acetate" />
    <Reagent
      id="methanol" />
    <Reagent
      id="the enone" />
    <Reagent
      id="the sodium borohydride" />
  </Reagents>

  <Procedure>
    <HeatChillToTemp
      vessel="reactor"
      temp="0.0"
      stir="True" />
    <Add
      reagent="the enone"
      vessel="reactor"
      volume="0"
      stir="True" />
    <Add
      reagent="cerium trichloride"
      vessel="reactor"
      volume="0"
      stir="True" />
    <Add
      reagent="methanol"
      vessel="reactor"
      volume="0"
      stir="True" />
    <Stir
      vessel="reactor"
      time="5 mins" />
    <Add
      reagent="the sodium borohydride"
      vessel="reactor"
      volume="0"
      time="15 mins" />
    <Stir
      vessel="reactor"
      time="1.75 hrs" />
    <Add
      reagent="ammonium chloride solution"
      vessel="reactor"
      volume="0" />
    <Separate
      purpose="extract"
      from_vessel="reactor"
      separation_vessel="separator"
      to_vessel="separator"
      product_bottom="True"
      solvent="ethyl acetate"
      solvent_volume="25 mL"
      n_separations="4" />
    <Separate
      purpose="wash"
      from_vessel="separator"
      separation_vessel="separator"
      to_vessel="rotavap"
      product_bottom="False"
      solvent="brine"
      through="magnesium sulphate"
      solvent_volume="25 mL" />
    <Evaporate
      rotavap_name="rotavap"
      time="30 mins"
      mode="auto" />
    <RunColumn
      from_vessel="rotavap"
      to_vessel="reactor"
      column="column" />
  </Procedure>

</Synthesis>
