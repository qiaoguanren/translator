<?xdl version="0.4.4" ?>

<Synthesis>
  <Hardware>
    <Component
      id="cartridge_Na2SO4"
      type="cartridge"
      chemical="Na2SO4" />
    <Component
      id="reactor"
      type="reactor" />
    <Component
      id="rotavap"
      type="rotavap" />
    <Component
      id="separator"
      type="separator" />
  </Hardware>

  <Reagents>
    <Reagent
      id="CH2Cl2" />
    <Reagent
      id="EtOAc" />
    <Reagent
      id="NEt3" />
    <Reagent
      id="acid chloride S2" />
    <Reagent
      id="aqueous HCl" />
    <Reagent
      id="brine" />
    <Reagent
      id="phenyl ethyl amine S1" />
  </Reagents>

  <Procedure>
    <Confirm
      msg="Is phenyl ethyl amine S1 ( 10.0 mmol ) in the correct vessel?" />
    <Dissolve
      vessel="reactor"
      solvent="CH2Cl2"
      volume="20 mL" />
    <Add
      reagent="NEt3"
      vessel="reactor"
      volume="2.1 mL"
      stir="True" />
    <HeatChillToTemp
      vessel="reactor"
      temp="0.0"
      stir="True" />
    <Add
      reagent="acid chloride S2"
      vessel="reactor"
      volume="0"
      dispense_speed="3.0"
      stir="True" />
    <Stir
      vessel="reactor"
      time="30 mins" />
    <HeatChillToTemp
      vessel="reactor"
      temp="18.0"
      active="False"
      continue_heatchill="False"
      stir="True" />
    <Stir
      vessel="reactor"
      time="22 hrs" />
    <Transfer
      from_vessel="reactor"
      to_vessel="rotavap"
      volume="all" />
    <Evaporate
      rotavap_name="rotavap"
      temp="50.0"
      pressure="699.0"
      time="30 mins"
      mode="auto" />
    <Dissolve
      vessel="rotavap"
      solvent="EtOAc"
      volume="40 mL" />
    <Transfer
      from_vessel="rotavap"
      to_vessel="separator"
      volume="all" />
    <Separate
      purpose="wash"
      from_vessel="separator"
      separation_vessel="separator"
      to_vessel="separator"
      product_bottom="False"
      solvent="aqueous HCl"
      solvent_volume="40 mL" />
    <Separate
      purpose="wash"
      from_vessel="separator"
      separation_vessel="separator"
      to_vessel="rotavap"
      product_bottom="False"
      solvent="brine"
      through="Na2SO4"
      solvent_volume="40 mL"
      waste_phase_to_vessel="separator" />
    <Evaporate
      rotavap_name="rotavap"
      temp="50.0"
      pressure="153.0"
      time="30 mins"
      mode="auto" />
  </Procedure>

</Synthesis>
