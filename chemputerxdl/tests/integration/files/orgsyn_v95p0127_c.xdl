<?xdl version="0.4.2" ?>

<Synthesis>
  <Hardware>
    <Component
      id="cartridge_MgSO4"
      type="cartridge"
      chemical="MgSO4" />
    <Component
      id="reactor"
      type="reactor" />
    <Component
      id="rotavap"
      type="rotavap" />
    <Component
      id="separator"
      type="separator" />
  </Hardware>

  <Reagents>
    <Reagent
      id="EtOAc" />
    <Reagent
      id="PEPPSI-IPr" />
    <Reagent
      id="aqueous NH4Cl" />
    <Reagent
      id="dry THF" />
    <Reagent
      id="ethyl 4-bromobenzoate" />
  </Reagents>

  <Procedure>
    <Add
      reagent="dry THF"
      vessel="reactor"
      volume="65 mL" />
    <Add
      reagent="ethyl 4-bromobenzoate"
      vessel="reactor"
      volume="4.6 mL"
      dispense_speed="10"
      stir="True" />
    <Add
      reagent="PEPPSI-IPr"
      vessel="reactor"
      mass="0.193 g"
      stir="True" />
    <HeatChill
      vessel="reactor"
      temp="25Â°C"
      time="2 hrs"
      stir="True" />
    <Add
      reagent="aqueous NH4Cl"
      vessel="reactor"
      volume="50 mL"
      stir="True" />
    <Separate
      purpose="extract"
      from_vessel="reactor"
      separation_vessel="separator"
      to_vessel="rotavap"
      product_bottom="False"
      solvent="EtOAc"
      through="MgSO4"
      solvent_volume="70 mL"
      n_separations="3" />
    <Evaporate
      rotavap_name="rotavap"
      time="30 mins"
      mode="auto" />
    <RunColumn
      from_vessel="rotavap"
      to_vessel="reactor"
      column="column" />
  </Procedure>

</Synthesis>
