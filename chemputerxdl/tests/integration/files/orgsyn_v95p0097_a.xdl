<?xdl version="0.4.2" ?>

<Synthesis>
  <Hardware>
    <Component
      id="buffer_flask"
      type="buffer_flask" />
    <Component
      id="cartridge_Na2SO4"
      type="cartridge"
      chemical="Na2SO4" />
    <Component
      id="cartridge_cotton wool"
      type="cartridge"
      chemical="cotton wool" />
    <Component
      id="cartridge_silica"
      type="cartridge"
      chemical="silica" />
    <Component
      id="reactor"
      type="reactor" />
    <Component
      id="rotavap"
      type="rotavap" />
    <Component
      id="separator"
      type="separator" />
  </Hardware>

  <Reagents>
    <Reagent
      id="1 M NaOH solution" />
    <Reagent
      id="acetonitrile" />
    <Reagent
      id="biphenyl-2-carboxylic acid 1" />
    <Reagent
      id="dichloromethane" />
    <Reagent
      id="ethyl acetate" />
    <Reagent
      id="potassium peroxydisulfate" />
    <Reagent
      id="saturated NaCl solution" />
    <Reagent
      id="silver nitrate" />
    <Reagent
      id="water" />
  </Reagents>

  <Procedure>
    <Add
      reagent="biphenyl-2-carboxylic acid 1"
      vessel="reactor"
      mass="7.93 g" />
    <Add
      reagent="potassium peroxydisulfate"
      vessel="reactor"
      mass="21.6 g" />
    <Add
      reagent="silver nitrate"
      vessel="reactor"
      mass="68 mg" />
    <Add
      reagent="water"
      vessel="reactor"
      volume="200 mL" />
    <Add
      reagent="acetonitrile"
      vessel="reactor"
      volume="200 mL"
      stir="True" />
    <HeatChill
      vessel="reactor"
      temp="50째C"
      time="27 hrs"
      stir="True"
      stir_speed="600 RPM" />
    <HeatChillToTemp
      vessel="reactor"
      temp="23째C"
      stir="True" />
    <Separate
      purpose="extract"
      from_vessel="reactor"
      separation_vessel="separator"
      to_vessel="rotavap"
      product_bottom="True"
      solvent="dichloromethane"
      solvent_volume="200 mL"
      n_separations="3" />
    <Evaporate
      rotavap_name="rotavap"
      temp="50째C"
      pressure="298 mbar"
      time="30 mins"
      mode="auto" />
    <Dissolve
      vessel="rotavap"
      solvent="ethyl acetate"
      volume="50 mL" />
    <FilterThrough
      from_vessel="rotavap"
      to_vessel="separator"
      through="silica"
      eluting_solvent="ethyl acetate"
      eluting_volume="100 mL" />
    <Separate
      purpose="wash"
      from_vessel="separator"
      separation_vessel="separator"
      to_vessel="separator"
      product_bottom="False"
      solvent="1 M NaOH solution"
      solvent_volume="75 mL"
      n_separations="2"
      waste_phase_to_vessel="buffer_flask" />
    <Separate
      purpose="wash"
      from_vessel="separator"
      separation_vessel="separator"
      to_vessel="rotavap"
      product_bottom="False"
      solvent="saturated NaCl solution"
      solvent_volume="75 mL"
      waste_phase_to_vessel="separator" />
    <Transfer
      from_vessel="buffer_flask"
      to_vessel="separator"
      volume="all" />
    <Separate
      purpose="extract"
      from_vessel="separator"
      separation_vessel="separator"
      to_vessel="rotavap"
      product_bottom="False"
      solvent="ethyl acetate"
      through="Na2SO4"
      solvent_volume="100 mL" />
    <FilterThrough
      from_vessel="rotavap"
      to_vessel="rotavap"
      through="cotton wool" />
    <Evaporate
      rotavap_name="rotavap"
      time="30 mins"
      mode="auto" />
    <Dry
      vessel="rotavap"
      time="12 hrs"
      temp="23째C" />
  </Procedure>

</Synthesis>
