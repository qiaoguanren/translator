      reagent="benzene"
      vessel="filter"
      volume="150 mL" />
    <Add
      reagent="trifluoromethanesulphonic anhydride"
      vessel="filter"
      mass="10 g"
      stir="True" />
    <HeatChill
      vessel="filter"
      temp="80.1Â°C"
      time="16 hrs"
      stir="True" />
    <FilterThrough
      from_vessel="filter"
      to_vessel="filter"
      through="celite" />
    <Filter
      filter_vessel="filter" />
    <WashSolid
      vessel="filter"
      solvent="benzene"
      volume="20 mL"
      repeat="2" />
    <Dry
      vessel="filter" />
  </Procedure>

</Synthesis>
