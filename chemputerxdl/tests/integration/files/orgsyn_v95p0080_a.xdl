<Synthesis>
  <Hardware>
    <Component
      id="cartridge_alumina"
      type="cartridge"
      chemical="alumina" />
    <Component
      id="reactor"
      type="reactor" />
    <Component
      id="rotavap"
      type="rotavap" />
    <Component
      id="separator"
      type="separator" />
  </Hardware>

  <Reagents>
    <Reagent
      id="4-dimethyl-aminopyridine" />
    <Reagent
      id="N,N-dibenzylhydroxylamine" />
    <Reagent
      id="deionized water" />
    <Reagent
      id="dichloromethane" />
    <Reagent
      id="pivaloyl chloride" />
    <Reagent
      id="saturated aqueous ammonium chloride" />
  </Reagents>

  <Procedure>
    <Add
      reagent="N,N-dibenzylhydroxylamine"
      vessel="reactor"
      mass="21.3 g" />
    <Add
      reagent="4-dimethyl-aminopyridine"
      vessel="reactor"
      mass="12.8 g" />
    <Add
      reagent="dichloromethane"
      vessel="reactor"
      volume="250 mL" />
    <Stir
      vessel="reactor"
      time="5 mins" />
    <HeatChill
      vessel="reactor"
      temp="0째C"
      time="20 mins"
      stir="True" />
    <Add
      reagent="pivaloyl chloride"
      vessel="reactor"
      volume="12.9 mL"
      time="5 mins"
      stir="True" />
    <HeatChillToTemp
      vessel="reactor"
      temp="18째C"
      active="False"
      continue_heatchill="False"
      stir="True" />
    <HeatChill
      vessel="reactor"
      temp="23째C"
      time="6 hrs"
      stir="True" />
    <Add
      reagent="saturated aqueous ammonium chloride"
      vessel="reactor"
      volume="50 mL"
      stir="True" />
    <Transfer
      from_vessel="reactor"
      to_vessel="separator"
      volume="all" />
    <Add
      reagent="dichloromethane"
      vessel="separator"
      volume="50 mL"
      stir="True" />
    <Separate
      purpose="extract"
      from_vessel="separator"
      separation_vessel="separator"
      to_vessel="separator"
      product_bottom="True"
      solvent="dichloromethane"
      solvent_volume="50 mL"
      n_separations="2" />
    <Separate
      purpose="wash"
      from_vessel="separator"
      separation_vessel="separator"
      to_vessel="rotavap"
