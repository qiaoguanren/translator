      solvent="deionized water"
      solvent_volume="200 mL" />
    <Evaporate
      rotavap_name="rotavap"
      temp="30째C"
      pressure="106.6576 mbar"
      time="30 mins"
      mode="auto" />
    <Dissolve
      vessel="rotavap"
      solvent="dichloromethane"
      volume="50 mL" />
    <FilterThrough
      from_vessel="rotavap"
      to_vessel="reactor"
      through="alumina" />
  </Procedure>

</Synthesis>
