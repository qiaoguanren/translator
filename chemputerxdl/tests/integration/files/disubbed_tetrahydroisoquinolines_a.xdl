<?xdl version="0.1.9" ?>

<Synthesis>
  <Hardware>
    <Component
      id="filter"
      type="filter" />
    <Component
      id="rotavap"
      type="rotavap" />
    <Component
      id="separator"
      type="separator" />
  </Hardware>

  <Reagents>
    <Reagent
      id="CH2Cl2" />
    <Reagent
      id="phenyl ethyl amine S1" />
    <Reagent
      id="NEt3" />
    <Reagent
      id="acid chloride S2" />
    <Reagent
      id="EtOAc" />
    <Reagent
      id="aqueous HCl" />
    <Reagent
      id="brine" />
  </Reagents>

  <Procedure>
    <Confirm
      msg="Is phenyl ethyl amine S1 ( 10.0 mmol ) in the correct vessel?" />
    <Dissolve
      vessel="filter"
      solvent="CH2Cl2"
      volume="20 mL" />
    <Add
      reagent="NEt3"
      vessel="filter"
      volume="2.1 mL"
      stir="True" />
    <HeatChillToTemp
      vessel="filter"
      temp="0°C" />
    <Add
      reagent="acid chloride S2"
      vessel="filter"
      volume="0"
      move_speed="0.1"
      aspiration_speed="0.1"
      dispense_speed="0.1"
      stir="True" />
    <Stir
      vessel="filter"
      time="30 mins" />
    <StopHeatChill
      vessel="filter" />
    <Wait
      time="12 hrs" />
    <Stir
      vessel="filter"
      time="22 hrs" />
    <Transfer
      from_vessel="filter"
      to_vessel="rotavap"
      volume="all"
      from_port="bottom"
      to_port="evaporate" />
    <Evaporate
      rotavap_name="rotavap"
      temp="50°C"
      pressure="699.0 mbar"
      time="30 mins"
      mode="auto" />
    <Dissolve
      vessel="rotavap"
      solvent="EtOAc"
      volume="40 mL" />
    <Separate
      purpose="wash"
      from_vessel="rotavap"
      separation_vessel="separator"
      to_vessel="separator"
      solvent="aqueous HCl"
      product_bottom="False"
      from_port="evaporate"
      to_port="top"
      solvent_volume="40 mL"
      n_separations="1" />
    <Separate
      purpose="wash"
      from_vessel="separator"
      separation_vessel="separator"
      to_vessel="rotavap"
      solvent="brine"
      product_bottom="False"
      through="cartridge_Na2SO4"
      to_port="evaporate"
      solvent_volume="40 mL"
      n_separations="1" />
    <Evaporate
      rotavap_name="rotavap"
      temp="50°C"
      pressure="426.0 mbar"
      time="30 mins"
      mode="auto" />
  </Procedure>

</Synthesis>
