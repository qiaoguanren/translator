<Synthesis>
  <Hardware>
    <Component
      id="cartridge_MgSO4"
      type="cartridge"
      chemical="MgSO4" />
    <Component
      id="cartridge_silica-gel"
      type="cartridge"
      chemical="silica-gel" />
    <Component
      id="reactor"
      type="reactor" />
    <Component
      id="rotavap"
      type="rotavap" />
    <Component
      id="separator"
      type="separator" />
  </Hardware>

  <Reagents>
    <Reagent
      id="2 methylcyclohexanone" />
    <Reagent
      id="brine" />
    <Reagent
      id="hexane" />
    <Reagent
      id="saturated sodium bicarbonate solution" />
    <Reagent
      id="sodium iodide acetonitrile solution" />
    <Reagent
      id="t-butyldimethylsilyl chloride(TBDMSCl)" />
    <Reagent
      id="triethylamine" />
  </Reagents>

  <Procedure>
    <Evacuate
      vessel="reactor" />
    <Add
      reagent="2 methylcyclohexanone"
      vessel="reactor"
      volume="10 mL"
      stir="False" />
    <Add
      reagent="triethylamine"
      vessel="reactor"
      volume="13.9 mL"
      stir="True" />
    <Add
      reagent="t-butyldimethylsilyl chloride(TBDMSCl)"
      vessel="reactor"
      mass="15.1 g"
      stir="True" />
    <Add
      reagent="sodium iodide acetonitrile solution"
      vessel="reactor"
      volume="100 mL"
      time="30 mins"
      stir="True" />
    <HeatChill
      vessel="reactor"
      time="18 hrs"
      temp="50"
    />
    <Add
      reagent="saturated sodium bicarbonate solution"
      vessel="reactor"
      volume="100 mL"
      stir="True" />
    <Separate
      purpose="extract"
      from_vessel="reactor"
      separation_vessel="separator"
      to_vessel="separator"
      product_bottom="False"
      solvent="hexane"
      to_port="top"
      solvent_volume="200 mL"
      n_separations="2" />
    <Separate
      purpose="wash"
      from_vessel="separator"
      separation_vessel="separator"
      to_vessel="rotavap"
      product_bottom="False"
      solvent="brine"
      through="MgSO4"
      to_port="evaporate"
      solvent_volume="40 mL"
      n_separations="1" />
    <Evaporate
      rotavap_name="rotavap"
      temp="30Â°C"
      pressure="26.66 mbar"
      time="30 mins"
      mode="auto" />
    <FilterThrough
      from_vessel="rotavap"
      to_vessel="reactor"
      through="silica-gel"
      eluting_solvent="hexane"
      eluting_volume="100 mL" />
  </Procedure>

</Synthesis>
