<?xdl version="0.1.10" ?>

<Synthesis>
  <Hardware>
    <Component
      id="reactor"
      type="reactor" />
    <Component
      id="filter"
      type="filter" />
  </Hardware>

  <Reagents>
    <Reagent
      id="4-phenylbutyric acid" />
    <Reagent
      id="benzylamine" />
    <Reagent
      id="boric acid" />
    <Reagent
      id="distilled water" />
    <Reagent
      id="hexanes" />
    <Reagent
      id="toluene"
      use_for_cleaning="True" />
  </Reagents>

  <Procedure>
    <Add
      reagent="4-phenylbutyric acid"
      vessel="reactor"
      mass="4.92 g"
      stir="False" />
    <Add
      reagent="boric acid"
      vessel="reactor"
      mass="20 mg"
      stir="False" />
    <Add
      reagent="toluene"
      vessel="reactor"
      volume="70 mL"
      stir="False" />
    <Add
      reagent="benzylamine"
      vessel="reactor"
      volume="3.4 mL"
      stir="True" />
    <HeatChill
      vessel="reactor"
      temp="140°C"
      time="16 hrs" />
    <HeatChillToTemp
      vessel="reactor"
      temp="25°C"
      active="False"
      continue_heatchill="False" />
    <Add
      reagent="hexanes"
      vessel="filter"
      volume="500 mL"
      stir="True" />
    <Transfer
      from_vessel="reactor"
      to_vessel="filter"
      volume="all" />
    <Stir
      vessel="filter"
      time="30 mins" />
    <Filter
      filter_vessel="filter" />
    <WashSolid
      vessel="filter"
      solvent="hexanes"
      volume="60 mL"
      repeat="2" />
    <WashSolid
      vessel="filter"
      solvent="distilled water"
      volume="60 mL"
      repeat="2" />
    <Dry
      vessel="filter"
      time="12 hrs"/>
  </Procedure>

</Synthesis>
